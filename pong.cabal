executable pong
  main-is:             Main.hs
  other-modules:
    Core.Math
    Core.Visual
    Core.Universe
    IO.Raylib
    IO.Subcreator
    Pong.World
    Pong.Start
    Pong.Arena
    Pong.Paddle
    Pong.Ball
    Pong.Universe
